pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Eureka Server') {
            steps {
                script {
                    def eurekaServerImage = docker.build("d4ramirez/eureka-server", "--file eureka-server/Dockerfile eureka-server")
                }
                withCredentials([usernamePassword(credentialsId: 'dockerHubCredentials', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                    script {
                        sh "docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}"
                        sh "docker push d4ramirez/eureka-server"
                    }
                }
            }
        }

        stage('Build API Gateway') {
            steps {
                script {
                    def eurekaServerImage = docker.build("d4ramirez/api-gateway", "--file common/Dockerfile api-gateway")
                }
                withCredentials([usernamePassword(credentialsId: 'dockerHubCredentials', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                    script {
                        sh "docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}"
                        sh "docker push d4ramirez/api-gateway"
                    }
                }
            }
        }

        stage('Build Microservices') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerHubCredentials', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                    script {
                        sh "docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}"

                        def microservices = sh (script: 'ls microservices', returnStdout: true).trim().split('\n')

                        for (microservice in microservices) {
                            def app = docker.build("d4ramirez/${microservice}", "--file common/Dockerfile microservices/${microservice}/")
                            
                            sh "docker push d4ramirez/${microservice}"
                        }
                    }
                }
            }
        }
    }
}
